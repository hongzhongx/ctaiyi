{
  "name": "@taiyinet/ctaiyi",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.7.0",
  "description": "Taiyi blockchain RPC client library",
  "author": "hongzhongðŸ€„ï¸",
  "contributors": [
    {
      "name": "enpitsulin",
      "email": "enpitsulin@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hongzhongx/ctaiyi"
  },
  "keywords": [
    "blockchain",
    "client",
    "rpc",
    "taiyi",
    "zuowangdao"
